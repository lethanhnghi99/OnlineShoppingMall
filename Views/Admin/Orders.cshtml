@model IEnumerable<OnlineShoppingMall.DAL.Tbl_Invoice>

@{
    /**/

    /**/

    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Product
        @*<a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus">Add New</a>*@
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ngày tạo</th>
                        <th>Tên khách hàng</th>
                        <th>Địa chỉ</th>
                        <th>SĐT</th>
                        <th>Tổng tiền</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.CustomerName</td>
                            <td>@item.Address</td>
                            <td>@item.PhoneNum</td>
                            <td>@item.Total</td>
                            <td>
                                <a href="/Admin/OrderDetail/@item.InvoiceID" class="btn btn-outline-success"><i class="glyphicon-align-justify">Chi tiết</i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
